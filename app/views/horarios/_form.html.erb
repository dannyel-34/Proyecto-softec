<div class="panel panel-success">
  <div class="panel-body">
<%= simple_form_for(@horario, :html => { :class => 'form-horizontal', remote: true } ) do |f| %>

  <% if @horario.errors.any? %>
	<div id="error_explanation">
  	<h2><%= pluralize(@horario.errors.count, "error") %> prohibited this municipio from being saved:</h2>

  	<ul>
  	<% @horario.errors.full_messages.each do |message| %>
    	<li><%= message %></li>
  	<% end %>
  	</ul>
	</div>
  <% end %>

  <div class="form-group">
   	<label for="name" class="col-sm-3 control-label">Asiste</label>
   	<div class="col-md-4">
      <%= f.radio_button(:asiste, true) %> Asistió<br>
      <%= f.radio_button(:asiste, false) %> Faltó<br>
   	</div>
  </div>
  
   <div class="form-group">
   	<label for="name" class="col-sm-3 control-label">Fecha</label>
   	<div class="col-md-4">
      <%= f.datetime_select :fch, 'data-provide' => "datepicker",  class: 'form-control', size: "40", width: "20", heigth: "62" %>
   	</div>
  </div>

   <div class="form-group">
   	<label for="name" class="col-sm-3 control-label">Curso</label>
   	<div class="col-md-4">
      <%= f.collection_select :curso_id, Curso.all, :id, :nombre, { }, class: "form-control", prompt: "Seleccione Curso" %>
   	</div>
  </div>
  
   <div class="form-group">
   	<label for="name" class="col-sm-3 control-label">Profesor</label>
   	<div class="col-md-4">
      <%= f.collection_select :profesor_id, Profesor.all, :id, :nombre, {       }, class: "form-control", prompt: "Seleccione profesor" %>
   	</div>
  </div>
  
  <div class="form-group">
   	<label for="name" class="col-sm-3 control-label">Alumno</label>
   	<div class="col-md-4">
      <%= f.collection_select :alumno_id, Alumno.all, :id, :nombre_completo, { }, class: "form-control", prompt: "Seleccione Alumno" %>
   	</div>
  </div>
  
  

  <div class="form-group">
	<div class="col-sm-offset-2 col-sm-10">
  	<%= f.submit "Guardar", class: "btn btn-sm btn-success" %>
	</div>
  </div>

<% end %>
</div>
</div>