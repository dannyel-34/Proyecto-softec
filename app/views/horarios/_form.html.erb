<div class="panel panel-success">
  <div class="panel-body">
<%= simple_form_for(@horario, :html => { :class => 'form-horizontal', remote: true } ) do |f| %>

  <% if @horario.errors.any? %>
	<div id="error_explanation">
  	<h2><%= pluralize(@horario.errors.count, "error") %> prohibited this municipio from being saved:</h2>

  	<ul>
  	<% @horario.errors.full_messages.each do |message| %>
    	<li><%= message %></li>
  	<% end %>
  	</ul>
	</div>
  <% end %>

  <div class="form-group">
   	<label for="name" class="col-sm-3 control-label">Fecha Inicio</label>
   	<div class="col-md-4">
      	 <%= f.text_field :fch_ini, 'data-provide' => "datepicker", class: "form-control", size: "40", width: "20", heigth: "62" %>
   	</div>
  </div>
  
  <div class="form-group">
   	<label for="name" class="col-sm-3 control-label">Fecha Final</label>
   	<div class="col-md-4">
      	 <%= f.text_field :fch_fin, 'data-provide' => "datepicker", class: "form-control", size: "40", width: "20", heigth: "62" %>
   	</div>
  </div>
  
   <div class="form-group">
   	<label for="name" class="col-sm-3 control-label">Dias del semana</label>
   	<div class="col-md-4">
      Lunes: <%= f.check_box :diasSemana %>
    <br>
    Martes: <%= f.check_box :diasSemana %>
    <br>
    Miercoles: <%= f.check_box :diasSemana %>
    <br>
    Jueves: <%= f.check_box :diasSemana %>
    <br>
    Viernes: <%= f.check_box :diasSemana %>
   	</div>
  </div>
  
   <div class="form-group">
   	<label for="name" class="col-sm-3 control-label">Profesor</label>
   	<div class="col-md-4">
      	<%= f.collection_select :profesor_id, Profesor.all, :id, :nombre, class: "form-control", prompt: "Seleccione nombre" %>
   	</div>
  </div>

  <div class="form-group">
	<div class="col-sm-offset-2 col-sm-10">
  	<%= f.submit "Guardar", class: "btn btn-sm btn-success" %>
	</div>
  </div>

<% end %>
</div>
</div>