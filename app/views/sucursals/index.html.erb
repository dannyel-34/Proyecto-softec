
<h1>Sucursales: <%= @institucion.nombre %></h1>

<div class="table-responsive">
<table class="table table-striped">
  <thead>
    <tr>
      <th>Codigo</th>
      <th>Sede</th>
      <th>Direccion</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sucursals.each do |sucursal| %>
      <tr>
        <td><%= sucursal.cod %></td>
        <td><%= sucursal.sede %></td>
        <td><%= sucursal.direccion %></td>
        <td><%= sucursal.email %></td>
        <td><%= link_to 'Mostrar', institucion_sucursal_path(@institucion, sucursal), class: "btn btn-info" %></td>
        <td><%= link_to 'Editar', edit_institucion_sucursal_path(@institucion, sucursal), class: "btn btn-warning"  %></td>
        <td><%= link_to 'Eliminar', institucion_sucursal_path(@institucion, sucursal), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger"  %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<br>

<%= link_to 'Nueva Sucursal', new_institucion_sucursal_path(@institucion), class: "btn btn-info"  %> |
<%= link_to 'Ir a instituciones', institucions_path, class: "btn btn-warning"  %> 

</div>