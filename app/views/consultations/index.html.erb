<ul class="nav nav-tabs">
  <li role="presentation" class="active">
    <%= link_to "Alumnos", alumnos_path %>
  </li>
  <li role="presentation"><%= link_to "Curso", cursos_path %></li>
  <li role="presentation"><%= link_to "Institucion", institucions_path %></li>
