<h1>Listado de consulta</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Alumno</th>
      <th>Curso</th>
      <th>Grupo</th>
      <th>Horario</th>
      <th>Institucion</th>
      <th>Sucursal</th>
      <th>Docente</th>
      <th>Usuario</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <%= render @consultations %>
  </tbody>
