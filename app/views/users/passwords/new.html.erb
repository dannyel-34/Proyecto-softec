<div class="authform">
  <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :role => 'form'}) do |f| %>
    <center><h3>Olvidaste tu contraseña?</h3></center>
    <p>Le enviaremos las instrucciones para restablecer su contraseña. </p>
    <%= devise_error_messages! %>
    <div class="form-group">
      <%= f.label :email %>
      <%= f.email_field :email, :autofocus => true, class: 'form-control' %>
    </div>
     <%= f.submit 'Restablecer contraseña', :class => 'button right' %>
  <% end %>
</div>