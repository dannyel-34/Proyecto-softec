      <%- if devise_mapping.registerable? %>
        <%= link_to 'Registrarse', new_registration_path(resource_name), class: 'right'  %>
      <% end -%>
      <%= f.label :email %>
      <%= f.email_field :email, :autofocus => true, class: 'form-control', :required => true, title: "Usted debe ingresar un correo electronico" %>
    </div>
    <div class="form-group">
      <%- if devise_mapping.recoverable? %>
        <%= link_to "Olvidaste tu contrase침a?", new_password_path(resource_name), class: 'right' %>
      <% end -%>
      <%= f.label :contrase침a %>
      <%= f.password_field :password, class: 'form-control', :required => true, title: "Usted debe ingresar una contrase침a" %>
    </div>
      <%= f.submit 'Entrar', :class => 'button right' %>
      <% if devise_mapping.rememberable? -%>
        <div class="checkbox" style="width:150px">
          <label>
            <%= f.check_box :remember_me %> Recordarme
          </label>
        </div>
      <% end -%>
  <% end %>
</div>