<div class="authform2">
  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :role => 'form'}) do |f| %>
    <center><h3>Registrate</h3></center>
    <%= devise_error_messages! %>
    
    <br>
  <br>
  
    <div class="form-group">
      <%= f.label :nombre %>
      <%= f.text_field :name, :autofocus => true, class: 'form-control', placeholder: "nombre", :required => true, title: "Usted debe ingresar su nombre"%>
    </div>
    <div class="form-group">
      <%= f.label :correo_electronico %>
      <%= f.email_field :email, class: 'form-control', placeholder: "Correo electronico", :required => true, title: "Ustd debe ingresar su correo electronico" %>
    </div>
    <div class="form-group">
      <%= f.label :contraseña %>
      <%= f.password_field :password, class: 'form-control', placeholder: "contraseña", :required => true, title: "Usted debe ingresar contraseña" %>
    </div>
    <div class="form-group">
      <%= f.label :confirmar_contraseña %>
      <%= f.password_field :password_confirmation, class: 'form-control', placeholder: "confirmar contraseña", :required => true, title: "Usted debe confirmar contraña" %>
    </div>
    
    <div class="form-group">
        <%= f.label :avatar, class: 'col-sm-2 control-label'  %>
        <div class="col-sm-6"><br>
            <%= f.file_field :avatar, :class => 'button center' %>
        </div>
    </div>
    
    <br>
    
    <br>
    
    <br>
    
    <br>
     <%= f.submit 'Registrate', :class => 'button right' %>
  <% end %>
</div>