<h1>Listado de  estados</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Nombre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @estados.each do |estado| %>
      <tr>
        <td><%= estado.nombre %></td>
        <td><%= link_to estado, :class => "btn btn-info btn-sm" do %>
          <span class="glyphicon glyphicon-eye-open"></span>
        <% end %>
        </td>
        <td><%= link_to edit_estado_path(estado), :class => "btn btn-warning btn-sm" do %>
        <span class="glyphicon glyphicon-edit"></span>
        <% end %>
        </td>
        <td><%= link_to estado, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger btn-sm" do %>
        <span class="glyphicon glyphicon-remove-circle"></span>
        <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo', new_estado_path, :class => "btn btn-primary btn-sm" %>
