<h1>Listado de Instituciones</h1>

<div class="panel panel-success">
  <div class="panel-heading">
    <h3 class="panel-title">Busqueda </h3>
  </div>
  <div class="panel-body">
      
      <br>

<%= form_tag institucions_path, :method => 'get' do %>
     <% content_tag :label do %>
           <h5 class="bus">Buscar:</h5>
         <%= text_field_tag :search, params[:search], id: "inp2", placeholder: "nombres", class: 'form-control lg-6' %>
         <button class="btn btn-info btn-sm" name="nil", id="btn-1">
           <%= image_tag("search.png") %>
         
         </button>
         
     <% end %>
<% end %>
  </div>
</div>

<br>

<br>

<br>

<div class="table-responsive">
<table class="table table-striped">
  <thead>
    <tr>
      <th>Codigo</th>
      <th>Nombre</th>
      <th>Correo electronico</th>
      <th>Direccion</th>
      <th>Telefono</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
   <%= render @institucions %>
  </tbody>
</table>

<br>

<%= link_to 'Nueva', new_institucion_path, class: "btn btn-primary btn-sm", remote: true %>

<br>

<%= will_paginate @institucions,  renderer: BootstrapPagination::Rails, :previous_label => '&laquo; Anterior', :next_label => 'Siguiente &raquo;' , class: 'pagination pagination-sm', id: 'pag-1'%>
<br>
Instituciones: <%= @institucions.count %>

</div>