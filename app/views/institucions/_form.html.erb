<div class="panel panel-success">
  <div class="panel-body">
<%= simple_form_for(@institucion, :html => { :class => 'form-horizontal', remote: true } ) do |f| %>

  <% if @institucion.errors.any? %>
	<div id="error_explanation">
  	<h2><%= pluralize(@institucion.errors.count, "error") %> prohibited this municipio from being saved:</h2>

  	<ul>
  	<% @institucion.errors.full_messages.each do |message| %>
    	<li><%= message %></li>
  	<% end %>
  	</ul>
	</div>
  <% end %>

  <div class="form-group">
   	<label for="name" class="col-sm-3 control-label">Codigo</label>
   	<div class="col-md-4">
      	<%= f.input_field :cod, class: 'form-control' %>
   	</div>
  </div>
  
   <div class="form-group">
   	<label for="name" class="col-sm-3 control-label">Nombre</label>
   	<div class="col-md-4">
      	<%= f.input_field :nombre, class: 'form-control' %>
   	</div>
  </div>
  
   <div class="form-group">
   	<label for="name" class="col-sm-3 control-label">Correo electronico</label>
   	<div class="col-md-4">
      	<%= f.input_field :email, class: 'form-control' %>
   	</div>
  </div>
  
   <div class="form-group">
   	<label for="name" class="col-sm-3 control-label">Direccion</label>
   	<div class="col-md-4">
      	<%= f.input_field :direccion, class: 'form-control' %>
   	</div>
  </div>
  
   <div class="form-group">
   	<label for="name" class="col-sm-3 control-label">Telefono</label>
   	<div class="col-md-4">
      	<%= f.input_field :telefono, class: 'form-control' %>
   	</div>
  </div>

  <div class="form-group">
	<div class="col-sm-offset-2 col-sm-10">
  	<%= f.submit "Guardar", class: "btn btn-success" %>
	</div>
  </div>

<% end %>
</div>
</div>