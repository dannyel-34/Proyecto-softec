<tr id=<%= "institucion_#{institucion.id}" %>>
    <td><%= institucion.cod %></td>
    <td><%= institucion.nombre %></td>
    <td><%= institucion.email %></td>
    <td><%= institucion.direccion %></td>
    <td><%= institucion.telefono %></td>
    <% if can? :manage, :all, Institucion %>
        <td><%= link_to 'Mostrar', institucion, class: "btn btn-info", remote: true  %></td>
        <td><%= link_to 'Editar', edit_institucion_path(institucion), class: "btn btn-warning", remote: true %></td>
        <td><%= link_to 'Eliminar', institucion, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger", remote: true %></td>
        <td><%= link_to "Sucursales", institucion_sucursals_path(institucion.id), class: "btn btn-success"%></td>
    <% elsif can? :read, Institucion %>
        <td><%= link_to 'Mostrar', institucion, remote: true, class: "btn btn-info btn-sm" %></td>
        <td><%= link_to 'Editar', edit_institucion_path(institucion), class: "btn btn-warning btn-sm", remote: true %></td>
    <% end %>
</tr>  