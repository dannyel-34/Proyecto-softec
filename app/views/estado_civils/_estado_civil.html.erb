<tr id=<%= "estado_civil_#{estado_civil.id}" %>>
   <td><%= estado_civil.nombre %></td>
   <% if can? :manage, :all, EstadoCivil %>
   <td><%= link_to estado_civil, class: "btn btn-info",  remote: true  do %>
      <span class="glyphicon glyphicon-eye-open"></span>
   <% end %>
   </td>
   <td><%= link_to edit_estado_civil_path(estado_civil), class: "btn btn-warning",  remote: true do %>
      <span class="glyphicon glyphicon-edit"></span>
   <% end %>
   </td>
   <td><%= link_to estado_civil, method: :delete, data: { confirm: 'Esta Seguro?' }, class: "btn btn-danger",  remote: true do %>
   <span class="glyphicon glyphicon-remote-circle"></span>
   <% end %>
   </td>
   <% elsif can? :read, EstadoCivil %>
   <td><%= link_to estado_civil, remote: true, class: "btn btn-info" do %>
         <span class="glyphicon glyphicon-eye-open"></span>
   <% end %>
   </td>
   <td><%= link_to edit_estado_civil_path(estado_civil), class: "btn btn-warning",  remote: true do %>
      <span class="glyphicon glyphicon-edit"></span>
   <% end %>
   </td>
   <% end %>
</tr>     
