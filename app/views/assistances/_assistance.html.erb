<tr id=<%= "assistance_#{assistance.id}" %>>
        <td><%= check_box_tag "assistance_ids[]", assistance.id %></td>
        <td><%= assistance.alumno.nombre_completo %></td>
        <td><%= assistance.profesor.nombre %></td>
        <td><%= assistance.curso.nombre %></td>
        <td><%= assistance.grupo.nombre %></td>
        <td><%= mostrar_horario(assistance.horario.asiste) %></td>
        <td><%= assistance.fch %></td>
        <% if can? :manage, :all, Assistance %>
        <td><%= link_to assistance, class: "btn btn-info btn-sm", remote: true do %>
                <span class="glyphicon glyphicon-eye-open"></span>
        <% end %>
        </td>
        <td><%= link_to edit_assistance_path(assistance), class: "btn btn-warning btn-sm", remote: true do %>
                <span class="glyphicon glyphicon-edit"></span>
        <% end %>
        </td>
        <td><%= link_to assistance, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm", remote: true do %>
                <span class="glyphicon glyphicon-remove-circle"></span>
        <% end %>
        </td>
        <% elsif can? :read, Assistance %>
        <td><%= link_to assistance, remote: true, class: "btn btn-info btn-sm" do %>
                <span class="glyphicon glyphicon-eye-open"></span>
        <% end %>
        </td>
        <td><%= link_to edit_assistance_path(assistance), class: "btn btn-warning btn-sm", remote: true do %>
                <span class="glyphicon glyphicon-edit"></span>
        <% end %>
        </td>
        <% end %>
</tr>