<h1>Listing surveys</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @surveys.each do |survey| %>
      <tr>
        <td><%= survey.name %></td>
        <td><%= link_to 'Mostrar', survey, :class => 'btn btn-info' %></td>
        <td><%= link_to 'Editar', edit_survey_path(survey), :class => 'btn btn-warning' %></td>
        <td><%= link_to 'Eliminar', survey, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Survey', new_survey_path, :class => 'btn btn-primary' %>
