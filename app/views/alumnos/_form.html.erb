<%= simple_form_for(@alumno, :html => { :class => 'form-horizontal', remote: true } ) do |f| %>

  <% if @alumno.errors.any? %>
	<div id="error_explanation">
  	<h2><%= pluralize(@alumno.errors.count, "error") %> prohibited this municipio from being saved:</h2>

  	<ul>
  	<% @alumno.errors.full_messages.each do |message| %>
    	<li><%= message %></li>
  	<% end %>
  	</ul>
	</div>
  <% end %>

<div class="row">
  <div class="col-xs-6">
  <div class="form-group">
   	<label for="name" class="col-sm-4 control-label">Codigo de Ficha: </label>
   	<div class="col-md-4">
      	<%= f.number_field :ficha, class: 'form-control', :required => true, title: "Ingrese un codigo de ficha" %>
   	</div>
  </div>
  </div>
  <div class="col-xs-6">
    <div class="form-group">
   	<label for="name" class="col-sm-4 control-label">Nombre</label>
   	<div class="col-md-4">
      	<%= f.input_field :nombre, class: 'form-control', :required => true, title: "Ingrese un nombre" %>
   	</div>
  </div>
  </div>
  <div class="col-xs-6">
    <div class="form-group">
   	<label for="name" class="col-sm-4 control-label">primer apellido: </label>
   	<div class="col-md-4">
      	<%= f.input_field :primer_apellido, class: 'form-control', :required => true, title: "Ingrese su primer apellido" %>
   	</div>
  </div>
  </div>
  
  <div class="col-xs-6">
    <div class="form-group">
   	<label for="name" class="col-sm-4 control-label">Segundo apellido: </label>
   	<div class="col-md-4">
      	<%= f.input_field :segundo_apellido, class: 'form-control', :required => true, title: "Ingrese segundo apellido" %>
   	</div>
  </div>
  </div>
  
  <div class="col-xs-6">
    <div class="form-group">
   	<label for="name" class="col-sm-4 control-label">Nombre completo: </label>
   	<div class="col-md-4">
      	<%= f.input_field :nombre_completo, class: 'form-control', :required => true, title: "Ingrese su nombre completo" %>
   	</div>
  </div>
  </div>
  
 <div class="col-xs-6"> 
   <div class="form-group">
   	<label for="name" class="col-sm-4 control-label">Correo electronico: </label>
   	<div class="col-md-4">
      	<%= f.input_field :email, class: 'form-control', :required => true, title: "Ingrese un correo electronico" %>
   	</div>
  </div>
  </div>
  
  <div class="col-xs-6">
    <div class="form-group">
   	<label for="name" class="col-sm-4 control-label">Genero: </label>
   	<div class="col-md-4">
      	Masculino: <%= f.radio_button(:genero, true) %> 
        Femenino: <%= f.radio_button(:genero, false) %>
   	</div>
  </div>
  </div>
  
  
  <div class="col-xs-6">
    <div class="form-group">
   	<label for="name" class="col-sm-4 control-label">Telefono: </label>
   	<div class="col-md-4">
      	<%= f.input_field :tel, class: 'form-control', :required => true, title: "Ingrese su telefon fijo" %>
   	</div>
  </div>
  </div>
  
  <div class="col-xs-6">
    <div class="form-group">
   	<label for="name" class="col-sm-4 control-label">Direccion: </label>
   	<div class="col-md-4">
      	<%= f.input_field :direccion, class: 'form-control', :required => true, title: "Ingrese su direccion de domicilio" %>
   	</div>
  </div>
  </div>
  
  <div class="col-xs-6">
    <div class="form-group">
    <label for="name" class="col-sm-4 control-label">Municipio: </label>
   	<div class="col-md-4">
        <%= f.autocomplete_field :municipio_nombre, autocomplete_municipio_nombre_alumnos_path, 
        :id_element => '#id_municipio',   class: "form-control" %>
         <%= hidden_field_tag 'id_municipio' %>
    </div>
    </div>
  </div>
  
  <div class="col-xs-6">
    <div class="form-group">
   	<label for="name" class="col-sm-4 control-label">Celular: </label>
   	<div class="col-md-4">
      	<%= f.input_field :celular, class: 'form-control', :required => true, title: "Ingrese su celular" %>
   	</div>
  </div>
  </div>
  
  <div class="col-xs-6">
    <div class="form-group">
   	<label for="name" class="col-sm-4 control-label">Documento de identidad: </label>
   	<div class="col-md-4">
      	<%= f.input_field :doc, class: 'form-control', :required => true, title: "Ingrese su documento de identidad" %>
   	</div>
  </div>
  </div>
  
  <div class="col-xs-6">
  <div class="form-group">
   	<label for="name" class="col-sm-4 control-label">Tipo de documento: </label>
   	<div class="col-md-4">
      	<%= f.collection_select :tipo_doc_id, TipoDoc.all, :id, :nombre, {}, class: "form-control", prompt: "Seleccione Municipio" %>
    </div>
  </div>
  </div>
  
  <div class="col-xs-6">
  <div class="form-group">
   	<label for="name" class="col-sm-4 control-label">Fecha de nacimiento: </label>
   	<div class="col-md-4">
      	<%= f.text_field :fch_nacimiento, 'data-provide' => "datepicker", class: "form-control", size: "40", width: "20", heigth: "62" %>
   	</div>
  </div>
  </div>
  
  <div class="col-xs-6">
  <div class="form-group">
   	<label for="name" class="col-sm-4 control-label">Tipo de documento: </label>
   	<div class="col-md-4">
      	<%= f.collection_select :estado_civil_id, EstadoCivil.all, :id, :nombre, {}, class: "form-control", prompt: "Seleccione Municipio" %>
    </div>
  </div>
  </div>
  
  <div class="col-xs-4">
  <div class="form-group">
    <label for="name" class="col-sm-4 control-label">Imagen: </label>
    <div class="col-md-4">
    <%= f.file_field :avatar, :class => 'btn btn-info btn-sm' %>
    </div>
  </div>
  </div>
  
  <div class="col-xs-4">
  <div class="form-group">
	<div class="col-sm-offset-2 col-sm-10">
  	<%= f.submit "Guadar", class: "btn btn-success btn-sm" %>
	</div>
  </div>
  </div>
  
</div>
<% end %>
