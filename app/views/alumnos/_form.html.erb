<%= simple_form_for(@alumno, :html => { :class => 'form-horizontal', remote: true } ) do |f| %>

  <% if @alumno.errors.any? %>
	<div id="error_explanation">
  	<h2><%= pluralize(@alumno.errors.count, "error") %> prohibited this municipio from being saved:</h2>

  	<ul>
  	<% @alumno.errors.full_messages.each do |message| %>
    	<li><%= message %></li>
  	<% end %>
  	</ul>
	</div>
  <% end %>

  <div class="form-group">
   	<label for="name" class="col-sm-3 control-label">Codigo de Ficha: </label>
   	<div class="col-md-4">
      	<%= f.number_field :ficha, class: 'form-control' %>
   	</div>
  </div>
  
    <div class="form-group">
   	<label for="name" class="col-sm-3 control-label">Nombre</label>
   	<div class="col-md-4">
      	<%= f.input_field :nombre, class: 'form-control' %>
   	</div>
  </div>
  
  
    <div class="form-group">
   	<label for="name" class="col-sm-3 control-label">primer apellido: </label>
   	<div class="col-md-4">
      	<%= f.input_field :primer_apellido, class: 'form-control' %>
   	</div>
  </div>
  
    <div class="form-group">
   	<label for="name" class="col-sm-3 control-label">Segundo apellido: </label>
   	<div class="col-md-4">
      	<%= f.input_field :segundo_apellido, class: 'form-control' %>
   	</div>
  </div>
  
    <div class="form-group">
   	<label for="name" class="col-sm-3 control-label">Nombre completo: </label>
   	<div class="col-md-4">
      	<%= f.input_field :nombre_completo, class: 'form-control' %>
   	</div>
  </div>
  
    <div class="form-group">
   	<label for="name" class="col-sm-3 control-label">Genero: </label>
   	<div class="col-md-4">
      	Masculino: <%= f.radio_button(:genero, true) %> 
        Femenino: <%= f.radio_button(:genero, false) %>
   	</div>
  </div>
  
  
    <div class="form-group">
   	<label for="name" class="col-sm-3 control-label">Telefono: </label>
   	<div class="col-md-4">
      	<%= f.input_field :tel, class: 'form-control' %>
   	</div>
  </div>
  
  
    <div class="form-group">
   	<label for="name" class="col-sm-3 control-label">Nombre</label>
   	<div class="col-md-4">
      	<%= f.input_field :direccion, class: 'form-control' %>
   	</div>
  </div>
  
    <div class="form-group">
   	<label for="name" class="col-sm-3 control-label">Municipio: </label>
   	<div class="col-md-4">
      	<%= f.collection_select :municipio_id, Municipio.all, :id, :nombre, class: "form-control", prompt: "Seleccione Municipio" %>
    </div>
    </div>
  
    <div class="form-group">
   	<label for="name" class="col-sm-3 control-label">Nombre</label>
   	<div class="col-md-4">
      	<%= f.input_field :celular, class: 'form-control' %>
   	</div>
  </div>
  
    <div class="form-group">
   	<label for="name" class="col-sm-3 control-label">Documento de identidad: </label>
   	<div class="col-md-4">
      	<%= f.input_field :doc, class: 'form-control' %>
   	</div>
  </div>
  
  <div class="form-group">
   	<label for="name" class="col-sm-3 control-label">Tipo de documento: </label>
   	<div class="col-md-4">
      	<%= f.collection_select :tipo_doc_id, TipoDoc.all, :id, :nombre, class: "form-control", prompt: "Seleccione Municipio" %>
    </div>
  </div>
  
  <div class="form-group">
   	<label for="name" class="col-sm-3 control-label">Fecha de nacimiento: </label>
   	<div class="col-md-4">
      	<%= f.text_field :fch_nacimiento, 'data-provide' => "datepicker", class: "form-control", size: "40", width: "20", heigth: "62" %>
   	</div>
  </div>

  <div class="form-group">
   	<label for="name" class="col-sm-3 control-label">Tipo de documento: </label>
   	<div class="col-md-4">
      	<%= f.collection_select :estado_civil_id, EstadoCivil.all, :id, :nombre, class: "form-control", prompt: "Seleccione Municipio" %>
    </div>
  </div>
  

  <div class="form-group">
	<div class="col-sm-offset-2 col-sm-10">
  	<%= f.submit "Guardar", class: "btn btn-sm btn-success" %>
	</div>
  </div>

<% end %>
