<h1>Listado de  alumnos</h1>

<div class="panel panel-success">
  <div class="panel-heading">
    <h3 class="panel-title">Busqueda </h3>
  </div>
  <div class="panel-body">
      
      <br>
    <%= form_tag alumnos_path, :method => 'get' do %>
     <% content_tag :label do %>
          <h5 class="bus">Buscar:</h5>
         <%= text_field_tag :search, params[:search], id: "inp1", placeholder: "nombres", class: 'form-control lg-6' %>
     <% end %>
    <% end %>

    <button class="btn btn-info btn-sm" name="nil", id="btn-1">
        <%= image_tag("search.png") %>
    </button>
    
    <br>
  
  </div>
</div>

<br>

<br>

<div class="table-responsive">
<table class="table table-bordered">
  <thead>
    <tr>
      <th>Codigo</th>
      <th>Nombre</th>
      <th>Primer apellido</th>
      <th>Segundo apellido</th>
      <th>Nombre completo</th>
      <th>Correo electronico</th>
      <th>Genero</th>
      <th>Telefono</th>
      <th>Direccion</th>
      <th>Municipio</th>
      <th>Celular</th>
      <th>Documento</th>
      <th>Tipo documento</th>
      <th>Fecha nacimiento</th>
      <th>Edad</th>
      <th>Estado civil</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
   <%= render @alumnos %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo', new_alumno_path, class: "btn btn-default btn-sm" %>


<br>
Alumnos: <%= @alumnos.count %>

<br>
<%= will_paginate @alumnos, renderer: BootstrapPagination::Rails, :previous_label => '&laquo; Anterior', :next_label => 'Siguiente &raquo;', class: 'pagination pagination-sm', id: 'pag-1' %>
</div>