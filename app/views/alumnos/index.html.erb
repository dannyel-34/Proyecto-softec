<h1>Listado de  alumnos</h1>

<div class="table-responsive">
<table class="table table-striped">
  <thead>
    <tr>
      <th>Ficha</th>
      <th>Nombre</th>
      <th>Primer apellido</th>
      <th>Segundo apellido</th>
      <th>Nombre completo</th>
      <th>Genero</th>
      <th>Tel</th>
      <th>Direccion</th>
      <th>Municipio</th>
      <th>Celular</th>
      <th>Doc</th>
      <th>Tipo doc</th>
      <th>Fch nacimiento</th>
      <th>Edad</th>
      <th>Estado civil</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @alumnos.each do |alumno| %>
      <tr>
        <td><%= alumno.ficha %></td>
        <td><%= alumno.nombre %></td>
        <td><%= alumno.primer_apellido %></td>
        <td><%= alumno.segundo_apellido %></td>
        <td><%= alumno.nombre_completo %></td>
        <td><%= mostrar_genero(alumno.genero)%></td>
        <td><%= alumno.tel %></td>
        <td><%= alumno.direccion %></td>
        <td><%= alumno.municipio.nombre %></td>
        <td><%= alumno.celular %></td>
        <td><%= alumno.doc %></td>
        <td><%= alumno.tipo_doc.nombre %></td>
        <td><%= alumno.fch_nacimiento %></td>
        <td><%= calcular_edad(alumno.fch_nacimiento) %></td>
        <td><%= alumno.estado_civil.nombre %></td>
        <td><%= link_to 'Mostrar', alumno, class: "btn btn-info" %></td>
        <td><%= link_to 'Editar', edit_alumno_path(alumno), class: "btn btn-warning" %></td>
        <td><%= link_to 'Eliminar', alumno, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo', new_alumno_path, class: "btn btn-default" %>
</div>